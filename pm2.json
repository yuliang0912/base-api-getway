{
  "apps": [
    {
      "name": "cw-api-gateway",
      "script": "app.js",
      "node_args": "-harmony",
      "watch": true,
      "exec_mode": "cluster",
      "max_memory_restart": "1G",
      "error_file": "./logs/pm2/pm2-err.log",
      "out_file": "./logs/pm2/pm2-out.log",
      "instances": "max",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "ignore_watch": [
        "logs"
      ],
      "env": {
        "NODE_ENV": "production",
        "PORT": "8000"
      },
      "env_dev": {
        "NODE_ENV": "development",
        "PORT": "8001"
      },
      "env_test": {
        "NODE_ENV": "test",
        "PORT": "8002"
      }
    }
  ]
}